<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TV Show Details</title>
    <link rel="stylesheet" href="/styles/movie_details_styles.css" />
    <!-- Link to the movie details stylesheet -->
    <style>
      body {
        background-color: #00000096;
      }
    </style>
  </head>
  <body>
    <header class="header">
      <a href="/index" class="logo">CineSurf</a>

      <div class="user-dropdown">
        <div class="user-info">
          <img src="/images/default-user-pic.png" alt="User Picture" />
          <div class="user-details">
            <span class="username"> <%= name %> </span>
          </div>
        </div>
        <div class="dropdown-content">
          <div class="user-details">
            <span class="username"> <%= name %> </span>
            <span class="email"> <%= email %> </span>
          </div>
          <form action="/logout?_method=DELETE" method="POST">
            <button type="submit">Logout</button>
          </form>
        </div>
      </div>
    </header>

    <div class="movie-details-container">
      <div class="movie-details-info">
        <div class="movie-poster-trailer">
          <img src="" alt="TV Show Poster" id="tv-show-poster" />
          <div class="overview" id="tv-show-overview">
            <h3>Overview</h3>
            <p>Placeholder text for overview</p>
          </div>
        </div>
        <!-- <div id="trailer-container"></div>  -->
      </div>
      <div class ="cast-details"></div>
    </div>

    <div class="given_reviews">
      <div class="review-content">
      </div>
    </div>

    <div>
      <h1>Your review here</h1>
      <textarea
        id="reviewTextArea"
        class="review_text_box"
        name="w3review"
        rows="10"
        cols="50"
        placeholder="Enter your Review here..."
      ></textarea>
      <button id="submitReviewButton" class="reviews-button">Submit</button>
    </div>
    <!-- Include the app.js file -->
    <script src="/scripts/movie_info.js">
      
    </script>
